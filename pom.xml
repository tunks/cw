                <version>1.0.2.Final</version>
                <configuration>
                    <name>cw</name>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.flywaydb</groupId>
                <artifactId>flyway-maven-plugin</artifactId>
                <version>${flyway.version}</version>
                <configuration>
                </configuration>
            </plugin>
        </plugins>
